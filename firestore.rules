rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Scenarios are public to all users
    match /scenarios/{scenarioId} {
      allow read: if true;
      allow write: if false; // Scenarios are read-only
    }

    // Users can only read and write to their own documents and subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
